{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "types": ["vite/client"]
  },
  "include": ["src/client/**/*", "src/shared/**/*", "vite.config.ts"],
  "exclude": ["src/server/**/*"]
}
